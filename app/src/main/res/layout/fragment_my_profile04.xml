<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyProfileFragment04">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_des"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/orange"
            android:gravity="left|bottom"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:text="나만의 맛집을 찾고 싶다면,\n지금 로그인 해보세요!"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="로그인"
            android:textColor="@color/orange"
            android:background="@drawable/ripple_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintTop_toTopOf="@+id/txt_des"
            app:layout_constraintBottom_toBottomOf="@+id/txt_des"
            app:layout_constraintLeft_toLeftOf="@+id/txt_des"
            app:layout_constraintRight_toRightOf="@+id/txt_des"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="1"
            app:cornerRadius="40dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="My Profile"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:gravity="center"/>

</FrameLayout>